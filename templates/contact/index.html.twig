{% extends 'base.html.twig' %}

{% block title %}{{parent()}} | Contactez-nous {% endblock %}

{% block body %}
<section class="contact">
        <div class="contact__title">
            <h2>Contactez-nous</h2>
        </div>
        <div class="contactForm">
                <div class="contactForm__left">
                  <q> <b>Le basket-ball, c'est le jeu qui rend l'impossible possible.</b></q>
                  <p> - Michael Jordan -</p>
                </div>
                <div class="contactForm__right">
                    <form action="" method="post">
                    <div class="row">
                        <div class="col">
                            <div class="mb-2">
                                    <label for="exampleFormControlInput1" class="form-label">Nom</label>
                                    <input type="text" class="form-control" id="exampleFormControlInput1" placeholder="Entrez votre nom">
                            </div>
                        </div>
                        <div class="col">
                            <div class="mb-2">
                                    <label for="exampleFormControlInput1" class="form-label">Prénom</label>
                                    <input type="text" class="form-control" id="exampleFormControlInput1" placeholder="Entrez votre prénom">
                            </div>
                        </div>
                    </div>
                        <div class="mb-2">
                                <label for="exampleFormControlInput1" class="form-label">Email</label>
                                <input type="email" class="form-control" id="exampleFormControlInput1" placeholder="name@example.com ">
                        </div>
                        <div class="mb-2">
                                <label for="exampleFormControlInput1" class="form-label"> sujet</label>
                                <input type="text" class="form-control" id="exampleFormControlInput1" placeholder="Sujet">
                        </div>                                                                       
                        <div class="mb-2">
                                <label for="exampleFormControlTextarea1" class="form-label">Entrez votre message</label>
                                <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" placeholder="Entrez votre message ici"></textarea>
                        </div>
                        <div class="form-check my-1">
                                <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                                <label class="form-check-label" for="flexCheckDefault">
                                j'accepte que mes données soit stockées et utilisées pour avoir une réponse 
                                </label>
                        </div>
                            <button type="submit" class="btn_submit">Envoyer </button>
                    </form>
                </div>
        </div>
</section>

{% endblock %}
